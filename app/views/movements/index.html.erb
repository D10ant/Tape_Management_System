<h1>Listing Movements</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Tape ID</th>
      <th>Location</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tapes.each do |tape| %>
      <tr>
        <td><%= tape.reference %></td>
        <td><%= tape.location.location %></td>
        <td><%= link_to 'Show', tape %></td>
        <td><%= link_to 'Edit', edit_location_path(tape) %></td>
        <td><%= link_to 'Destroy', tape, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


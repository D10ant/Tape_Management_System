<!DOCTYPE html>
<html>
<head>
	<title>LUK Media Handling</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
	<%= favicon_link_tag %>
</head>
<body>
	<p class="notice"><%= notice %></p
 	<p class="alert"><%= alert %></p>
	<%= nav_bar :fixed => :top, :brand => "LUK Media Handling", :brand_link => root_path do %>
		<% if current_user %>
			<%= menu_group do %>
				<%= menu_item "Tapes", root_path %>
				<%= drop_down "Consignments" do %>
					<%= menu_item "View all", consignments_path %>
					<%= menu_item "Create new", new_consignment_path %>
				<% end %>
				<%= menu_item "Customers", customers_path %>
				<%= menu_item "Locations", locations_path %>
	    	<% end %>
	    	<%= menu_group :pull => :right do %>	        		
            	<%= drop_down current_user.email do %>
					<%= menu_item "log out", destroy_user_session_path, :method => :delete %>
				<% end %>
	       	<% end %>
		<% end %>
	<% end %>

	<div class="container-fluid" role="main">
		<%= yield %>
	</div>
	<!--<footer>
		<div class="navbar navbar-fixed-bottom">
			<%= image_tag('logicalis_logo_tiny.png') %>
		</div>
	</footer>-->
</body>
</html>

=form_for(@tape, :html => { :class => 'form-horizontal', :role => 'form', :onsubmit => 'return validateTapeForm()' }) do |f|
  -if @tape.errors.any?
    %div#error_explanation
      %h2= #{pluralize(@tape.errors.count, "error")} prohibited this tape from being saved:
      =debug(@tapes)
      %ul
        -@tape.errors.full_messages.each do |msg|
          %li= msg

  %div.form-group
    %div.col-sm-10
      =f.label :reference
      =text_field_tag(:reference, '', :class => 'form-control')

  %div.form-group
    %div.col-sm-10
      =f.select :reference, options_for_select([]), {}, {:class => 'form-control', :multiple => true}

  %div.form-group
    %div.col-sm-10
      =link_to 'Remove Tape', '#', :class => 'btn btn-mini btn-danger', :id => 'remove_tape'

  %br

  %div.form-group
    %div.col-sm-10
      =f.label :customer_id
      -customer_hash = Hash.new(0)
      -@customers.each do |customer|
        -customer_hash[customer.name] = customer.id
      =f.select(:customer_id, customer_hash, {}, :class => 'form-control')

  %div.form-group
    %div.col-sm-10
      =f.submit :class => 'btn btn-primary'

%h2 Import Tapes From CSV
=form_tag import_tapes_path, multipart: true do
  =file_field_tag :file, :class => 'form-control'
  %br
  =submit_tag "Import", :class => 'btn btn-primary'
  %br

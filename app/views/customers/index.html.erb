<h1>Listing customers</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Customer tla</th>
      <th>Customer name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.tla %></td>
        <td><%= customer.name %></td>
        <td><%= link_to 'Tapes', customer %></td>
        <td><%= link_to 'Tapes Movement History', customer_history_index_path(:format => :html, :customer_id => customer) %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

